      <%= @the_game.latitude %>
    </dd>

    <dt>
      Longitude
    </dt>
    <dd>
      <%= @the_game.longitude %>
    </dd>

    <dt>
      Search radius
    </dt>
    <dd>
      <%= @the_game.search_radius %>
    </dd>

    <dt>
      Number of questions
    </dt>
    <dd>
      <%= @the_game.number_of_questions %>
    </dd>

    <dt>
      Correct answers
    </dt>
    <dd>
      <%= @the_game.correct_answers %>
    </dd>

    <dt>
      Incorrect answers
    </dt>
    <dd>
      <%= @the_game.incorrect_answers %>
    </dd>

    <dt>
      Difficulty
    </dt>
    <dd>
      <%= @the_game.difficulty %>
    </dd>

    <dt>
      User
    </dt>
    <dd>
