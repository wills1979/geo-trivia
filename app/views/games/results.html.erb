<% if @score > 0.8 %>
  <h1>Nice job!</h1>
  <h2>You answered <%= @count_correct %> out of <%= @count_total %> correctly!</h2>
<% elsif @score > 0.5 %>
  <h1>Okay!</h1>
  <h2>You answered <%= @count_correct %> out of <%= @count_total %> correctly.</h2>
<% elsif @count_correct == 0 %>
  <h1>Oof!</h1>
  <h2>You didn't answer any correctly.</h2>
<% else %>
  <h1>Oof!</h1>
  <h2>You answered <%= @count_correct %> out of <%= @count_total %> correctly.</h2>
<% end %>

<% @questions.each_with_index  do |question, index| %>
  <% correct = @results.fetch(question.id.to_s, false) %>
  <div>

    <% if correct %>
      <h3>Question <%= index+1 %>: <%= question.challenge %> <span>&#10004;</span></h3>
    <% else %>
      <h3>Question <%= index+1 %>: <%= question.challenge %> <span>&#10008;</span></h3>
    <% end %>

    <ul>
      <li><%= question.option_a %></li>
      <li><%= question.option_b %></li>
      <li><%= question.option_c %></li>
      <li><%= question.option_d %></li>
    </ul>
  </div>

  <% if correct %>
    <p>Nice job! You selected the correct answer, <%= @correct_answers.fetch(question.id.to_s) %>!</p>
  <% elsif @answers.fetch(question.id.to_s, nil) != nil%>
    <p>You selected <%= @answers.fetch(question.id.to_s) %> and the right answer was <%= @correct_answers.fetch(question.id.to_s) %>.</p>
    <% else %>
    <p>You didn't answer this one! The correct answer is <%= question.correct_answer %>.
  <% end %>

<% end %>

<hr>

